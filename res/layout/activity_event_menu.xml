<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventMenu" >

    <Button
        android:id="@+id/ViewLocalEventsButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/EventsHostingButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/custom_button"
        android:text="View Local Events" />

    <Button
        android:id="@+id/EventsHostingButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/EventsAttendingButton"
        android:layout_below="@+id/ViewLocalEventsButton"
        android:background="@drawable/custom_button"
        android:text="Events I&apos;m Hosting" />

    <Button
        android:id="@+id/EventsAttendingButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/EventsHostingButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:text="Events I&apos;m Attending" />

</RelativeLayout>
